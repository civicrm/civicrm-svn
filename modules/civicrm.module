function civicrm_register_data($edit, &$user, $category) {
    $output = array( );
    if ( $user->uid ) {
        CRM_Core_BAO_UFMatch::synchronize( $user, true, 'Drupal' );
    }

    $html = CRM_Core_BAO_UFGroup::getEditHTML( '', null, true );
    $output[] = array( 'title' => 'CiviCRM Information', 'data' => $html, weight => 0 );
    return $output;
}

function civicrm_form_data($edit, &$user, $category) {
    // get all the data for this specific category
    $html = CRM_Core_BAO_UFGroup::getEditHTML( $category, null, false );
    
    $output = array( );
    $output[] = array( 'title' => $category, 'data' => $html, weight => 0 );
    return $output;
}

