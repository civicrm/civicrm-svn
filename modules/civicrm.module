function civicrm_view_data($user ) {
    $ufGroups =& CRM_Core_PseudoConstant::ufGroup( );

    $data = array( );
    foreach ( $ufGroups as $id => $title ) {
        $data[$title] = CRM_Core_BAO_UFGroup::getEditHTML( $title, CRM_Core_Action::VIEW, false );
    }
    return $data;
}

function civicrm_validate_data($edit, $title) {
    $register = ( $title == 'account' ) ? true : false;
    if ( ! CRM_Core_BAO_UFGroup::isValid( $title, $register ) ) {
        form_set_error( 'error', 'Please correct the errors in the form fields below' );
    }
    return;
}

