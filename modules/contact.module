/**
 *
 * contact_delete()
 *
 * lists all contacts from db.
 *
 */
function contact_delete($id) 
{
    $contact = new CRM_Contact_Contact();
    $contact->run(CRM_Form::MODE_DELETE, $id);
    return $contact->getContent();
