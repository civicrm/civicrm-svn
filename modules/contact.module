function contact_admin_invoke() 
{
    $content = "the contact administrator invoked $operation";
    print theme('page', $content);
}

function crm_invoke()
{
    //  manage groups
    if (arg(1) == 'groups') {
        if(arg(2) == 'edit' OR arg(2) == 'add') {
            $content = fetch_tpl( 'Groups/Form/Edit.tpl');
        } else {
            contact_assign( 'name','dave');
            $content = fetch_tpl( 'Groups/Groups.tpl');
        }
    }

    //  import wizard
    if (arg(1) == 'import') {
        $content = fetch_tpl( 'Import/ImportStart.tpl');
    }


    //  add notes
    if (arg(1)=='note' && arg(2) == 'add') {
        $content .= note_form( CRM_Form::MODE_ADD );
    }
    

    
    print theme('page', $content);
}

function contact_invoke() 
{
    $content = "";

    //  add contact
    if (arg(1)=='contact' && arg(2) == 'add') {
        $content .= contact_form( CRM_Form::MODE_ADD );
    }

    // edit contact
    if (arg(1)=='contact' && arg(2) == 'edit') {
        $content .= contact_form( CRM_Form::MODE_UPDATE );
    }
 
    // view contact
    if (arg(1)=='contact' && arg(2) == 'view' && arg(3) == '') {
        $view = new CRM_Contact_Page_View( 'View Contact','',CRM_Contact_Page_View::MODE_NONE );
        $content .= $view->run( );
    }

    // view contact notes
    if (arg(2) == 'view' && arg(3) == 'note') {
        $view = new CRM_Contact_Page_View( 'View Contact','',CRM_Contact_Page_View::MODE_NOTE );
        $content .= $view->run( );
    }

    // view contact relationships
    if (arg(2) == 'view' && arg(3) == 'rels') {
        $view = new CRM_Contact_Page_View( 'View Contact','',CRM_Page::VIEW_MODE_REL );
        $content .= $view->run( );
    }

    // view contact groups
    if (arg(2) == 'view' && arg(3) == 'groups') {
        $view = new CRM_Contact_Page_View( 'View Contact','',CRM_Page::VIEW_MODE_GROUP );
        $content .= $view->run( );
    }

    // view contact tags
    if (arg(2) == 'view' && arg(3) == 'tags') {
        $view = new CRM_Contact_Page_View( 'View Contact','',CRM_Page::VIEW_MODE_TAG   );
        $content .= $view->run( );
    }

    // search
    if (arg(2) == 'search') {
        $content .= contact_query();
    }
        
    // advanced search
    if (arg(2) == 'advanced_search') {
        $content .= contact_advanced_search();
    }

    // delete
    if (arg(2) == 'delete') {
        if(is_numeric(arg(3))) {
            $content .= contact_delete(arg(3));
        } else {
            $content .= 'Please select a valid contact id to edit - ' . arg(3) . ' is not a valid contact id';
        }
    }

    print theme('page', $content);
    
} // end of function contact_invoke


