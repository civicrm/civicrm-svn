require_once 'CiviTestCase.php';
require_once 'Contact.php';

class BAO_Core_Location extends CiviTestCase 
{
    
    function get_info( ) 
    {
        return array(
                     'name'        => 'Location BAOs',
                     'description' => 'Test all Core_BAO_Location methods.',
                     'group'       => 'CiviCRM BAO Tests',
                     );
    }
    
    function setUp( ) 
    {
        parent::setUp();
    }
    
    /**
     * create() method
     * create various elements of location block
     * without civicrm_loc_block entry
     */
    
    function testCreate( )
    {
        $contactId = Contact::createIndividual( );
        
        //create various element of location block 
        //like address, phone, email, openid, im.
        $params['location'][1] = array ( 'location_type_id'                               => 1,
                                         'is_primary'                                     => 1,
                                         'address' =>  array ( 
                                                              'street_address'            => 'Saint Helier St',
                                                              'supplemental_address_1'    => 'Hallmark Ct',
                                                              'supplemental_address_2'    => 'Jersey Village',
                                                              'city'                      => 'Newark',
                                                              'postal_code'               => '01903',
                                                              'country_id'                => 1228,
                                                              'state_province_id'         => 1029,
                                                              'geo_code_1'                => '18.219023',
                                                              'geo_code_2'                => '-105.00973',
                                                              ),
                                         'email'   => array ( 
                                                             '1' => array ( 'email'       => 'john.smith@example.org' ), 
                                                             ),
                                         'phone'   => array (
                                                             '1' => array (
                                                                           'phone_type'   => 'Phone',
                                                                           'phone'        => '303443689',
                                                                           ),
                                                             '2' => array (
                                                                           'phone_type'   => 'Mobile',
                                                                           'phone'        => '9833910234',
                                                                           ),
                                                             ),
                                         'openid'  => array (
                                                             '1' => array ( 'openid'      => 'http://civicrm.org' ),
                                                             ),
                                         'im'      => array (
                                                             '1' => array ( 'name'        => 'jane.doe',
                                                                            'provider_id' => 1
                                                                            ),
                                                             ),
                                         );
        
        $params['contact_id'] = $contactId;
        
        require_once 'CRM/Core/BAO/Location.php';
        CRM_Core_BAO_Location::create( $params );
        
        //Now check DB for contact
        $this->assertDBCompareValues('CRM_Core_DAO_Address',
                                     array( 'contact_id'             => $contactId ), 
                                     array( 'location_type_id'       => 1 ),
                                     array( 'is_primary'             => 1 ),
                                     array( 'street_address'         => 'Saint Helier St' ),
                                     array( 'supplemental_address_1' => 'Hallmark Ct' ),
                                     array( 'supplemental_address_2' => 'Jersey Village' ),
                                     array( 'city'                   => 'Newark' ),
                                     array( 'postal_code'            => '01903' ),
                                     array( 'country_id'             => 1228 ),
                                     array( 'state_province_id'      => 1029 ),
                                     array( 'geo_code_1'             => '18.219023' ),
                                     array( 'geo_code_2'             => '-105.00973' )
                                     );
        $this->assertDBCompareValues('CRM_Core_DAO_Email',
                                     array( 'contact_id'             => $contactId ), 
                                     array( 'location_type_id'       => 1 ),
                                     array( 'is_primary'             => 1 ),
                                     array( 'email'                  => 'john.smith@example.org' )
                                     );
        $this->assertDBCompareValues('CRM_Core_DAO_Phone',
                                     array( 'contact_id'             => $contactId ), 
                                     array( 'location_type_id'       => 1 ),
                                     array( 'is_primary'             => 1 ),
                                     array( 'phone'                  => '303443689' ),
                                     array( 'phone_type'             => 'Phone' )
                                     );
        $this->assertDBCompareValues('CRM_Core_DAO_Phone',
                                     array( 'contact_id'             => $contactId ), 
                                     array( 'location_type_id'       => 1 ),
                                     array( 'is_primary'             => 1 ),
                                     array( 'phone'                  => '9833910234' ),
                                     array( 'phone_type'             => 'Mobile' )
                                     );
        $this->assertDBCompareValues('CRM_Core_DAO_OpenID',
                                     array( 'contact_id'             => $contactId ), 
                                     array( 'location_type_id'       => 1 ),
                                     array( 'is_primary'             => 1 ),
                                     array ( 'openid'                => 'http://civicrm.org' )
                                     );
        $this->assertDBCompareValues('CRM_Core_DAO_IM',
                                     array( 'contact_id'             => $contactId ), 
                                     array( 'location_type_id'       => 1 ),
                                     array( 'is_primary'             => 1 ),
                                     array( 'name'                   => 'jane.doe' ),
                                     array( 'provider_id'            => 1 )
                                     );
        
        //cleanup DB by deleting the contact
        Contact::delete( $contactId );
    }
    
}

?>