        "<p>\nHi\n</p>",
        "<p>\nHi\n</p>",
        "<p>\nHi\n</p>",
        "<p>\nHi\n</p>",
        "<p>\nHi\n</p>",
        "<p>\nHi\n</p>",
        "<p>\nHi\n</p>",
        "<p>\nHi\n</p>\n<p>\nfolks\n<br />\n!\n</p>",
        "<p>\nHi\n</p>\n<p>\nfolks\n<br />\n!\n</p>",
        "<p>\nHi\n</p>\n<p>\nfolks\n<br />\n!\n</p>",
      );
    // And Using an input format WITH the line-break filter.
    $teasers_lb = array(
        "<p>\nHi\n</p>\n<p>\nfolks\n<br />\n!\n</p>",
        "<",
        "<p",
        "<p>",
        "<p>",
        "<p>",
