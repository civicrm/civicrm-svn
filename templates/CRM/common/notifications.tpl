<div id="crm-notification-container" style="display:none">

  <div id="crm-notification-alert">
    <div class="icon ui-notify-close #{ldelim}type{rdelim}"> </div>
    <a class="ui-notify-cross ui-notify-close" href="#">x</a>
    <h1>#{ldelim}title{rdelim}</h1>
    <div class="notify-content">#{ldelim}text{rdelim}</div>
  </div>

  <div id="crm-notification-confirm">
    <div class="notification-icon confirm"> </div>
    <a class="ui-notify-cross ui-notify-close" href="#">x</a>
    <h1>#{ldelim}title{rdelim}</h1>
    <div class="notify-content">#{ldelim}text{rdelim}</div>
    <input type="button" class="confirm" value="{ts}OK{/ts}" />
    <input type="button" class="confirm" value="{ts}Cancel{/ts}" />
  </div>
 
</div>
