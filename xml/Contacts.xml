<?xml version="1.0" encoding="iso-8859-1" ?>

<database>
<name>crmtest</name>
<character_set>utf8</character_set>
<collate>utf8_bin</collate>
<table_type>InnoDB</table_type>
<comment>Schema for the CRM Module</comment>
<table>
  <name>crm_country</name>
  <field>
      <name>id</name>
      <type>int unsigned</type>
      <required>true</required>
      <comment>Country Id</comment>
  </field>
  <primaryKey>
       <name>id</name>
       <autoincrement>true</autoincrement>
  </primaryKey>
  <field>
       <name>name</name>
       <type>varchar</type>
       <length>64</length>
       <comment>Country Name</comment>
  </field>
  <field>
       <name>iso_code</name>
       <type>char</type>
       <length>2</length>
       <comment>ISO Code</comment>
  </field>
  <field>
       <name>country_code</name>
       <type>varchar</type>
       <length>4</length>
       <comment>National prefix to be used when dialing TO this country.</comment>
  </field>
  <field>
       <name>idd_prefix</name>
       <type>varchar</type>
       <length>4</length>
       <comment>International direct dialing prefix from within the country TO another country</comment>
  </field>
  <field>
       <name>ndd_prefix</name>
       <type>varchar</type>
       <length>4</length>
       <comment>Access prefix to call within a country to a different area</comment>
  </field>
</table>

<table>
  <name>crm_state_province</name>
  <field>
      <name>id</name>
      <type>int unsigned</type>
      <required>true</required>
       <comment>State / Province ID</comment>
  </field>
  <primaryKey>
       <name>id</name>
       <autoincrement>false</autoincrement>
  </primaryKey>
  <field>
       <name>name</name>
       <type>varchar</type>
       <length>64</length>
       <comment>Name of State / Province</comment>
  </field>
  <field>
       <name>abbreviation</name>
       <type>varchar</type>
       <length>4</length>
       <comment>2-4 Character Abbreviation of State / Province</comment>
  </field>
  <field>
       <name>country_id</name>
       <type>int unsigned</type>
       <required>true</required>
       <comment>ID of Country that State / Province belong</comment>
  </field>
  <foreignKey>
       <name>country_id</name>
       <table>crm_country</table>
       <key>id</key>
  </foreignKey>
</table>

<table>
  <name>crm_county</name>
  <field>
      <name>id</name>
      <type>int unsigned</type>
      <required>true</required>
       <comment>County ID</comment>
  </field>
  <primaryKey>
       <name>id</name>
       <autoincrement>false</autoincrement>
  </primaryKey>
  <field>
       <name>name</name>
       <type>varchar</type>
       <length>64</length>
       <comment>Name of County</comment>
  </field>
  <field>
       <name>abbreviation</name>
       <type>varchar</type>
       <length>4</length>
       <comment>2-4 Character Abbreviation of County</comment>
  </field>
  <field>
       <name>state_province_id</name>
       <type>int unsigned</type>
       <required>true</required>
       <comment>ID of State / Province that County belongs</comment>
  </field>
  <foreignKey>
       <name>state_province_id</name>
       <table>crm_state_province</table>
       <key>id</key>
  </foreignKey>
</table>

<table>
  <name>crm_domain</name>
  <comment>Top-level hierarchy to support multi-org/domain installations. Define domains for multi-org installs, else all contacts belong to one domain.</comment>
  <field>
      <name>id</name>
      <type>int unsigned</type>
      <required>true</required>
      <comment>Domain ID</comment>
  </field>
  <primaryKey>
       <name>id</name>
       <autoincrement>true</autoincrement>
  </primaryKey>
  <field>
       <name>name</name>
       <type>varchar</type>
       <length>64</length>
       <comment>Name of Domain / Organization</comment>
  </field>
  <field>
       <name>description</name>
       <type>varchar</type>
       <length>255</length>
       <comment>Description of Domain.</comment>
  </field>
</table>

<table>
  <name>crm_location_type</name>
  <field>
      <name>id</name>
      <type>int unsigned</type>
      <required>true</required>
      <comment>Location Type ID</comment>
  </field>
  <primaryKey>
       <name>id</name>
       <autoincrement>true</autoincrement>
  </primaryKey>
  <field>
      <name>domain_id</name>
      <type>int unsigned</type>
      <required>true</required>
      <comment>Which Domain owns this location type.</comment>
  </field>
  <foreignKey>
       <name>domain_id</name>
       <table>crm_domain</table>
       <key>id</key>
  </foreignKey>
  <field>
       <name>name</name>
       <type>varchar</type>
       <length>64</length>
       <comment>Location Type Name.</comment>
  </field>
  <field>
       <name>description</name>
       <type>varchar</type>
       <length>255</length>
       <comment>Location Type Description.</comment>
  </field>
  <field>
       <name>is_reserved</name>
       <type>boolean</type>
       <comment>Is this location type a predefined system location?</comment>
  </field>
</table>

</database>