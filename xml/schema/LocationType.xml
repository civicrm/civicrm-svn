<?xml version="1.0" encoding="iso-8859-1" ?>

<table>
  <base>CRM/Contact</base>
  <name>crm_location_type</name>
  <field>
      <name>id</name>
      <type>int unsigned</type>
      <required>true</required>
      <comment>Location Type ID</comment>
  </field>
  <primaryKey>
       <name>id</name>
       <autoincrement>true</autoincrement>
  </primaryKey>
  <field>
      <name>domain_id</name>
      <type>int unsigned</type>
      <required>true</required>
      <comment>Which Domain owns this location type.</comment>
  </field>
  <foreignKey>
       <name>domain_id</name>
       <table>crm_domain</table>
       <key>id</key>
  </foreignKey>
  <field>
       <name>name</name>
       <title>Location Type</title>
       <type>varchar</type>
       <length>64</length>
       <import>true</import>
       <comment>Location Type Name.</comment>
  </field>
  <field>
       <name>description</name>
       <type>varchar</type>
       <length>255</length>
       <comment>Location Type Description.</comment>
  </field>
  <field>
       <name>is_reserved</name>
       <type>boolean</type>
       <comment>Is this location type a predefined system location?</comment>
  </field>
</table>
