<?xml version="1.0" encoding="iso-8859-1" ?>
<table>
  <base>CRM/Core</base>
  <name>crm_meeting</name>
  <comment>Meeting details stored here include contact, location, notes</comment>
  <field>
      <name>id</name>
      <type>int unsigned</type>
      <required>true</required>
      <comment>Unique Meeting ID</comment>
  </field>
  <primaryKey>
       <name>id</name>
       <autoincrement>true</autoincrement>
  </primaryKey>
  <field>
      <name>contact_id</name>
      <type>int unsigned</type>
      <required>true</required>
      <comment>Contact ID of person</comment>
  </field>
  <foreignKey>
       <name>contact_id</name>
       <table>crm_contact</table>
       <key>id</key>
  </foreignKey>
  <field>
     <name>meeting_date</name>
     <type>datetime</type>
     <comment>Date and time of meeting</comment>
  </field>
  <field>
      <name>title</name>
      <type>varchar</type>
      <length>128</length>
      <comment>Title</comment>
  </field>
  <field>
      <name>location</name>
      <type>varchar</type>
      <length>255</length>
      <comment>Where will the meeting be held ?</comment>
  </field>
  <field>
      <name>notes</name>
      <type>text</type>
      <comment>Miscellaneous Notes</comment>
  </field>
</table>
