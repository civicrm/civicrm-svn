<?xml version="1.0" encoding="iso-8859-1" ?>

<table> 
  <base>CRM/PledgeBank</base> 
  <class>PledgeSigner</class> 
  <name>civicrm_pledgesigner</name> 
  <add>2.1</add>
  <field> 
      <name>id</name> 
      <uniqueName>pledgesigner_id</uniqueName> 
      <title>PledgeSigner ID</title>
      <type>int unsigned</type> 
      <required>true</required> 
      <comment>PledgeSigner Id</comment> 
      <import>true</import>
      <add>2.1</add> 
  </field> 
  <primaryKey> 
       <name>id</name> 
       <autoincrement>true</autoincrement> 
  </primaryKey>
  <field> 
      <name>contact_id</name>
      <uniqueName>pledgesigner_contact_id</uniqueName> 
      <type>int unsigned</type> 
      <title>Contact ID</title>
      <headerPattern>/contact(.?id)?/i</headerPattern>
      <import>true</import>
      <default>0</default>
      <comment>FK to Contact ID</comment> 
      <add>2.1</add> 
  </field>
  <foreignKey> 
       <name>contact_id</name> 
       <table>civicrm_contact</table> 
       <key>id</key> 
       <onDelete>CASCADE</onDelete>
  </foreignKey>
  <field> 
      <name>pledge_id</name> 
      <type>int unsigned</type> 
      <title>Pledge ID</title>
      <headerPattern>/pledge(.?id)?/i</headerPattern>
      <import>true</import>
      <default>0</default>
      <comment>FK to Pledge ID</comment> 
      <add>2.1</add> 
  </field>
  <foreignKey> 
       <name>pledge_id</name> 
       <table>civicrm_pledge</table> 
       <key>id</key> 
       <onDelete>CASCADE</onDelete>
  </foreignKey>
  <field>     
      <name>is_anonymous</name>  
      <uniqueName>is_anonymous</uniqueName> 
      <title>Anonymity - whether given pledge signer name should stay disclosed</title>
      <type>boolean</type>
      <default>0</default>
      <import>true</import>
      <add>2.1</add>     
  </field>
  <field> 
      <name>email_id</name>
      <uniqueName>signer_email_id</uniqueName> 
      <type>int unsigned</type> 
      <title>Email ID</title>
      <headerPattern>/email(.?id)?/i</headerPattern>
      <import>true</import>
      <default>0</default>
      <comment>FK to Email ID</comment> 
      <add>2.1</add> 
  </field>
  <field>     
      <name>pledge_done</name>  
      <uniqueName>pledge_done</uniqueName> 
      <title>Whether given signer fulfilled their pledge.</title>
      <type>boolean</type>
      <default>0</default>
      <import>true</import>
      <add>2.1</add>     
  </field>
  <foreignKey> 
       <name>email_id</name> 
       <table>civicrm_email</table> 
       <key>id</key> 
       <onDelete>CASCADE</onDelete>
  </foreignKey>
  <field>
       <name>geo_code_1</name>
       <type>float</type>
       <import>true</import>
       <headerPattern>/geo/i</headerPattern>
       <comment>Latitude</comment>
       <add>1.1</add>
  </field>
  <field>
       <name>geo_code_2</name>
       <type>float</type>
       <comment>Longitude</comment>
       <import>true</import>
       <headerPattern>/geo/i</headerPattern>
       <add>1.1</add>
  </field>
</table>