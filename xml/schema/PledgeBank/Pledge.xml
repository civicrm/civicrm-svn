<?xml version="1.0" encoding="iso-8859-1" ?> 
 
<table> 
  <base>CRM/PledgeBank</base> 
  <class>Pledge</class> 
  <name>civicrm_pb_pledge</name> 
  <add>2.1</add> 
  <field> 
      <name>id</name> 
      <uniqueName>pledge_id</uniqueName> 
      <title>Pledge ID</title>
      <type>int unsigned</type> 
      <required>true</required> 
      <comment>Pledge Id</comment> 
      <import>true</import>
      <add>2.1</add> 
  </field> 
  <primaryKey> 
       <name>id</name> 
       <autoincrement>true</autoincrement> 
  </primaryKey> 
  <field>
      <name>creator_name</name>
      <title>Creators name, defaulted to I</title>  
      <import>true</import>
      <type>varchar</type>
      <length>256</length>
      <add>2.1</add>     
  </field>
  <field>
      <name>creator_pledge_desc</name>
      <title>Creators pledge</title>  
      <import>true</import>
      <type>varchar</type>     
      <length>256</length>  
      <add>2.1</add>     
  </field>
  <field> 
      <name>signers_limit</name>
      <type>int unsigned</type> 
      <title>Required number of signers</title>
      <import>true</import>
      <default>0</default>
      <add>2.1</add> 
  </field>
  <field>
      <name>signer_description_text</name>
      <title>Description of signers</title>  
      <import>true</import>
      <type>varchar</type>     
      <length>256</length>  
      <add>2.1</add>     
  </field> 
  <field>
      <name>signer_pledge_desc</name>
      <title>Signers pledge</title>  
      <import>true</import>
      <type>varchar</type>     
      <length>256</length>  
      <add>2.1</add>     
  </field> 
  <field>
      <name>deadline</name>
      <title>Pledge deadline</title>
      <import>true</import>
      <type>date</type>     
      <add>2.1</add>     
  </field>
  <field>
      <name>url_reference</name>
      <title>Pledge url reference</title>  
      <import>true</import>
      <type>varchar</type>     
      <length>64</length>  
      <add>2.1</add>     
  </field>
  <field>  
      <name>description</name>
      <type>text</type>
      <comment>pledge description</comment>  
      <add>2.1</add>     
  </field> 
  <field> 
      <name>creator_id</name> 
      <type>int unsigned</type> 
      <title>Reference to pledge creators contact record</title>
      <import>true</import>
      <default>0</default>
      <comment>FK to Contact ID</comment> 
      <add>2.1</add> 
  </field>
  <foreignKey> 
       <name>creator_id</name> 
       <table>civicrm_contact</table> 
       <key>id</key> 
       <add>2.1</add>
       <onDelete>CASCADE</onDelete>
  </foreignKey>
  <field>
      <name>creator_description</name>
      <title>Pledge creators description</title>  
      <import>true</import>
      <type>varchar</type>     
      <length>256</length>  
      <add>2.1</add>     
  </field>
  <field>
      <name>created_date</name>
      <title>Pledge creation date</title>
      <import>false</import>
      <type>datetime</type>     
      <add>2.1</add>     
  </field>
  <field>
      <name>loc_block_id</name>
      <type>int unsigned</type>
      <comment>FK to Location Block ID</comment>
      <add>2.1</add>
  </field>
  <foreignKey>
       <name>loc_block_id</name>
       <table>civicrm_loc_block</table>
       <key>id</key>
       <onDelete>CASCADE</onDelete>
       <add>2.1</add>
  </foreignKey>
  <field>
      <name>is_active</name>
      <type>boolean</type>
      <comment>Is this pledge active?</comment>
      <add>2.1</add>
  </field>                                
</table>
