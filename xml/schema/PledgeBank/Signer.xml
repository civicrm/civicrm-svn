<?xml version="1.0" encoding="iso-8859-1" ?>

<table> 
  <base>CRM/PledgeBank</base> 
  <class>Signer</class> 
  <name>civicrm_pb_signer</name>
  <add>2.1</add>
  <field> 
      <name>id</name> 
      <uniqueName>signer_id</uniqueName> 
      <title>Signer ID</title>
      <type>int unsigned</type> 
      <required>true</required> 
      <comment>Signer Id</comment> 
      <import>true</import>
      <add>2.1</add> 
  </field> 
  <primaryKey> 
       <name>id</name>
       <autoincrement>true</autoincrement>
  </primaryKey>
  <field> 
      <name>contact_id</name>
      <uniqueName>signer_contact_id</uniqueName> 
      <type>int unsigned</type> 
      <title>Contact ID</title>
      <headerPattern>/contact(.?id)?/i</headerPattern>
      <import>true</import>
      <default>0</default>
      <comment>FK to Contact ID</comment> 
      <add>2.1</add> 
  </field>
  <foreignKey>
       <name>contact_id</name>
       <table>civicrm_contact</table>
       <key>id</key>
       <onDelete>CASCADE</onDelete>
  </foreignKey>
  <field> 
      <name>pledge_id</name> 
      <type>int unsigned</type> 
      <title>Pledge ID</title>
      <headerPattern>/pledge(.?id)?/i</headerPattern>
      <import>true</import>
      <default>0</default>
      <comment>FK to Pledge ID</comment> 
      <add>2.1</add> 
  </field>
  <foreignKey> 
       <name>pledge_id</name> 
       <table>civicrm_pb_pledge</table> 
       <key>id</key> 
       <onDelete>CASCADE</onDelete>
  </foreignKey>
  <field>     
      <name>is_anonymous</name>  
      <uniqueName>signer_is_anonymous</uniqueName> 
      <title>Anonymity - whether given pledge signer name should stay disclosed</title>
      <type>boolean</type>
      <default>0</default>
      <import>true</import>
      <add>2.1</add>     
  </field>
  <field> 
      <name>email_id</name>
      <uniqueName>signer_email_id</uniqueName> 
      <type>int unsigned</type> 
      <title>Email ID</title>
      <headerPattern>/email(.?id)?/i</headerPattern>
      <import>true</import>
      <default>0</default>
      <comment>FK to Email ID</comment> 
      <add>2.1</add> 
  </field>
  <foreignKey> 
       <name>email_id</name> 
       <table>civicrm_email</table> 
       <key>id</key> 
       <onDelete>CASCADE</onDelete>
  </foreignKey>
  <field>     
      <name>is_done</name>  
      <uniqueName>signer_is_done</uniqueName> 
      <title>Whether given signer fulfilled their pledge.</title>
      <type>boolean</type>
      <default>0</default>
      <import>true</import>
      <add>2.1</add>     
  </field>
  <field>        
      <name>signing_date</name>
      <uniqueName>signer_signing_date</uniqueName>
      <title>Signing date</title>
      <import>true</import>
      <type>datetime</type>     
      <comment>When did contact sign this pledge?</comment>
      <add>2.1</add>     
  </field>
  <field>     
      <name>is_test</name>  
      <uniqueName>signer_is_test</uniqueName> 
      <title>Test</title>
      <type>boolean</type>
      <default>0</default>
      <import>true</import>
      <add>2.1</add>
  </field>  
</table>
