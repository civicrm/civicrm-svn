<?xml version="1.0" encoding="iso-8859-1" ?>

<table>
  <base>CRM/Pledge</base>
  <class>Payment</class>
  <name>civicrm_pledge_payment</name>
  <comment>Pledge Payment</comment>
  <add>2.1</add>
  <field>
      <name>id</name>
      <type>int unsigned</type>
      <required>true</required>
      <add>2.1</add>
  </field>
  <primaryKey>
      <name>id</name>
      <autoincrement>true</autoincrement>
  </primaryKey>
  <field>
      <name>pledge_id</name>
      <type>int unsigned</type>
      <required>true</required>
      <comment>FK to Pledge table</comment>
      <add>2.1</add>
  </field>
  <foreignKey> 
    <name>pledge_id</name> 
    <table>civicrm_pledge</table> 
    <key>id</key> 
    <add>2.1</add>
    <onDelete>CASCADE</onDelete>
  </foreignKey>   
  <field>
      <name>contribution_id</name>
      <type>int unsigned</type>
      <comment>FK to contribution table.</comment>
      <add>2.1</add>
  </field>
  <foreignKey> 
    <name>contribution_id</name> 
    <table>civicrm_contribution</table> 
    <key>id</key> 
    <add>2.1</add>
    <onDelete>CASCADE</onDelete>
  </foreignKey> 
  <index>
    <name>UI_contribution_pledge</name>
    <unique>true</unique>
    <fieldName>contribution_id</fieldName>
    <fieldName>pledge_id</fieldName>
    <add>2.1</add>
  </index>
  <field>
       <name>scheduled_amount</name>
       <type>decimal</type>
       <required>true</required>
       <comment>Pledged Amount, the contribution amount might be different</comment>
       <add>2.1</add>
  </field>
  <field>
       <name>scheduled_date</name>
       <type>datetime</type>
       <required>true</required>
       <comment>The date the pledge is supposed to happen.</comment>
       <add>2.1</add>
  </field>
  <field>
      <name>status_id</name>
      <title>Pledge Status</title>
      <type>int unsigned</type>
      <add>2.1</add>
  </field>
  <index>
    <name>index_status</name>
    <fieldName>status_id</fieldName>
    <add>2.1</add>
  </index>
</table>
