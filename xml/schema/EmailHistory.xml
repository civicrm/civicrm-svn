<?xml version="1.0" encoding="iso-8859-1" ?>

<table>
  <base>CRM/Core</base>
  <name>crm_email_history</name>
  <comment>Email History can be linked to any object in the application.</comment>
  <field>
      <name>id</name>
      <type>int unsigned</type>
      <required>true</required>
      <comment>Email History ID</comment>
  </field>
  <primaryKey>
       <name>id</name>
       <autoincrement>true</autoincrement>
  </primaryKey>
  <field>
       <name>subject</name>
       <type>varchar</type>
       <length>255</length>
       <comment>Subject of the email.</comment>
  </field>
  <field>
       <name>message</name>
       <type>text</type>
       <comment>Contents of the email.</comment>
       <htmlType>textarea</htmlType>
       <rows>20</rows>
       <cols>80</cols>
  </field>
  <field>
       <name>contact_id</name>
      <type>int unsigned</type>
      <required>true</required>
      <comment>FK to Contact who is sending this email</comment>
  </field>
  <foreignKey>
       <name>contact_id</name>
       <table>crm_contact</table>
       <key>id</key>
  </foreignKey>
  <field>
       <name>sent_date</name>
       <type>date</type>
       <comment>When was this email sent</comment>
  </field>
</table>
