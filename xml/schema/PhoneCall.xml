<?xml version="1.0" encoding="iso-8859-1" ?>
<table>
  <base>CRM/Core</base>
  <name>crm_activity_phone</name>
  <comment>Record details regarding phone calls between contacts</comment>
  <field>
      <name>id</name>
      <type>int unsigned</type>
      <required>true</required>
      <comment>Unique Table ID</comment>
  </field>
  <primaryKey>
       <name>id</name>
       <autoincrement>true</autoincrement>
  </primaryKey>
  <field>
      <name>activity_id</name>
      <type>int unsigned</type>
      <required>true</required>
      <comment>Activity table Id</comment>
  </field>
  <foreignKey>
       <name>activity_id</name>
       <table>crm_activity</table>
       <key>id</key>
  </foreignKey>
  <field>
      <name>caller_id</name>
      <type>int unsigned</type>
      <required>true</required>
      <comment>Contact ID of the person who called</comment>
  </field>
  <foreignKey>
       <name>caller_id</name>
       <table>crm_contact</table>
       <key>id</key>
  </foreignKey>
  <field>
      <name>callee_id</name>
      <type>int unsigned</type>
      <required>true</required>
      <comment>Contact ID of person who was called</comment>
  </field>
  <foreignKey>
       <name>callee_id</name>
       <table>crm_contact</table>
       <key>id</key>
  </foreignKey>
  <field>
      <name>phone_id</name>
      <type>int unsigned</type>
      <required>true</required>
      <comment>Phone ID of the number we called up</comment>
  </field>
  <foreignKey>
       <name>phone_id</name>
       <table>crm_phone</table>
       <key>id</key>
  </foreignKey>
  <field>
      <name>status</name>
      <type>enum</type>
      <values>Closed, Followup, Unreachable, Answering Machine</values>
      <comment>What is the status of this phone call ?</comment>
  </field>
  <field>
      <name>call_log</name>
      <type>text</type>
      <comment>Log</comment>
  </field>
  <field>
      <name>priority</name>
      <type>enum</type>
      <values>Low, Medium, High, Critical</values>
      <comment>Priority ? </comment>
  </field>
  <field>
      <name>next_call_datetime</name>
      <type>datetime</type>
      <comment>When to call next ?</comment>
  </field>
  <field>
      <name>parent_id</name>
      <type>int unsigned</type>
      <required>true</required>
      <comment>Parent phone call ID</comment>
  </field>
  <foreignKey>
       <name>parent_id</name>
       <table>crm_activity_phone</table>
       <key>id</key>
  </foreignKey>
</table>
