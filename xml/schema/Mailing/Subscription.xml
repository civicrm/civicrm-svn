<?xml version="1.0" encoding="iso-8859-1" ?>

<table>
  <base>CRM/Mailing</base>
  <class>Subscription</class>
  <name>civicrm_mailing_subscription</name>
  <comment>Stores information about the subscription details of a contact.</comment>
  <field>
      <name>id</name>
      <type>int unsigned</type>
      <required>true</required>
      <comment>Unique Custom Field ID</comment>
  </field>
  <primaryKey>
       <name>id</name>
       <autoincrement>true</autoincrement>
  </primaryKey>
  <field>
      <name>contact_id</name>
      <type>int unsigned</type>
      <required>true</required>
      <comment>FK to Contact ID</comment>
  </field>
  <foreignKey>
       <name>contact_id</name>
       <table>civicrm_contact</table>
       <key>id</key>
  </foreignKey>
  <field>
      <name>group_contact_id</name>
      <type>int unsigned</type>
      <comment>FK to Group Contact ID</comment>
  </field>
  <foreignKey>
       <name>group_contact_id</name>
       <table>civicrm_group_contact</table>
       <key>id</key>
  </foreignKey>
  <field>
      <name>date</name>
      <type>datetime</type>
      <comment>date on which this element was inserted</comment>
  </field>
  <field>
       <name>method</name>
       <type>enum</type>
       <values>Admin, Email, Web, API</values>
       <comment>Method of insertion of this element.</comment>
  </field>
  <field>
       <name>status</name>
       <type>enum</type>
       <values>Pending, In, Out</values>
       <comment>status of contact</comment>
  </field>
  <field>
       <name>origin</name>
       <type>varchar</type>
       <length>255</length>
       <comment>IP address from which operation was performed</comment>
  </field>
</table>
