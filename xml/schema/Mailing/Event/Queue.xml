    <field>
        <name>id</name>
        <type>int unsigned</type>
        <required>true</required>
    </field>
    <primaryKey>
        <name>id</name>
        <autoincrement>true</autoincrement>
    </primaryKey>
    <field>
        <name>job_id</name>
        <type>int unsigned</type>
        <required>true</required>
        <comment>FK to Job</comment>
    </field>
    <foreignKey>
        <name>job_id</name>
        <table>crm_mailing_job</table>
        <key>id</key>
    </foreignKey>
    <field>
        <name>email_id</name>
        <type>int unsigned</type>
        <required>true</required>
        <comment>FK to Email</comment>
    </field>
    <foreignKey>
        <name>email_id</name>
        <table>crm_email</table>
        <key>id</key>
    </foreignKey>
    <field>
        <name>contact_id</name>
        <type>int unsigned</type>
        <required>true</required>
        <comment>FK to Contact</comment>
    </field>
    <foreignKey>
        <name>contact_id</name>
        <table>crm_contact</table>
        <key>id</key>
    </foreignKey>
    <field>
        <name>hash</name>
        <type>int unsigned</type>
        <required>true</required>
        <comment>Security hash</comment>
    </field>
</table>
