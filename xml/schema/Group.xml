<?xml version="1.0" encoding="iso-8859-1" ?>

<table>
  <base>CRM/Contact</base>
  <name>crm_group</name>
  <comment>Provide grouping of related contacts</comment>
  <field>
      <name>id</name>
      <type>int unsigned</type>
      <required>true</required>
      <comment>Group ID</comment>
  </field>
  <primaryKey>
       <name>id</name>
       <autoincrement>true</autoincrement>
  </primaryKey>
  <field>
      <name>domain_id</name>
      <type>int unsigned</type>
      <required>true</required>
      <comment>Which Domain owns this group</comment>
  </field>
  <foreignKey>
       <name>domain_id</name>
       <table>crm_domain</table>
       <key>id</key>
  </foreignKey>
  <field>
       <name>name</name>
       <type>varchar</type>
       <length>64</length>
       <comment>Internal name of Group.</comment>
  </field>
  <field>
       <name>title</name>
       <type>varchar</type>
       <length>64</length>
       <comment>Name of Group.</comment>
  </field>
  <field>
       <name>description</name>
       <type>varchar</type>
       <length>255</length>
       <comment>Optional verbose description of the category.</comment>
  </field>
  <field>
      <name>group_type</name>
      <type>enum</type>
      <values>static, query</values>
      <default>'static'</default>
      <comment>Type of groups - 2 types are supported - static or query</comment>
  </field>
  <field>
       <name>source</name>
       <type>varchar</type>
       <length>64</length>
       <comment>Module or process which created this group.</comment>
  </field>
</table>
