<?xml version="1.0" encoding="iso-8859-1" ?>

<table>
  <base>CRM/Contact</base>
  <name>crm_individual</name>
  <comment>Define individual specific properties</comment>
  <field>
      <name>id</name>
      <type>int unsigned</type>
      <required>true</required>
      <comment>Unique Individual ID</comment>
  </field>
  <primaryKey>
       <name>id</name>
       <autoincrement>true</autoincrement>
  </primaryKey>
  <field>
      <name>contact_id</name>
      <type>int unsigned</type>
      <required>true</required>
      <comment>FK to Contact ID</comment>
  </field>
  <foreignKey>
       <name>contact_id</name>
       <table>crm_contact</table>
       <key>id</key>
  </foreignKey>
  <field>
       <name>first_name</name>
       <type>varchar</type>
       <length>64</length>
       <import>true</import>
       <headerPattern>/^first|(f(irst\b)?name)$/i</headerPattern>
       <fulltext/>
       <comment>First Name.</comment>
  </field>
  <field>
       <name>middle_name</name>
       <type>varchar</type>
       <length>64</length>
       <comment>Middle Name.</comment>
  </field>
  <field>
       <name>last_name</name>
       <type>varchar</type>
       <length>64</length>
       <import>true</import>
       <headerPattern>/^last|(l(ast\b)?name)$/i</headerPattern>
       <comment>Last Name.</comment>
       <fulltext/>
  </field>
  <field>
       <name>prefix</name>
       <type>varchar</type>
       <length>64</length>
       <import>true</import>
       <headerPattern>/^prefix$/i</headerPattern>
       <comment>Prefix to Name.</comment>
  </field>
  <field>
       <name>suffix</name>
       <type>varchar</type>
       <length>64</length>
       <import>true</import>
       <headerPattern>/^prefix$/i</headerPattern>
       <comment>Suffix to Name.</comment>
  </field>
  <field>
       <name>greeting_type</name>
       <type>enum</type>
       <values>Formal, Informal, Honorific, Custom, Other</values>
       <comment>Preferred greeting format.</comment>
  </field>
  <field>
       <name>custom_greeting</name>
       <type>varchar</type>
       <length>128</length>
       <comment>Custom greeting message.</comment>
  </field>
  <field>
       <name>job_title</name>
       <type>varchar</type>
       <length>64</length>
  </field>
  <field>
       <name>gender</name>
       <type>enum</type>
       <values>Female, Male, Transgender</values>
  </field>
  <field>
       <name>birth_date</name>
       <type>date</type>
  </field>
  <field>
       <name>is_deceased</name>
       <type>boolean</type>
       <default>0</default>
  </field>
  <field>
      <name>phone_to_household_id</name>
      <type>int unsigned</type>
      <comment>OPTIONAL FK to crm_contact_household record. If NOT NULL, direct phone communications to household rather than individual location.</comment>
  </field>
  <field>
      <name>email_to_household_id</name>
      <type>int unsigned</type>
      <comment>OPTIONAL FK to crm_contact_household record. If NOT NULL, direct phone communications to household rather than individual location.</comment>
  </field>
  <field>
      <name>mail_to_household_id</name>
      <type>int unsigned</type>
      <comment>OPTIONAL FK to crm_contact_household record. If NOT NULL, direct mail communications to household rather than individual location.</comment>
  </field>
</table>
