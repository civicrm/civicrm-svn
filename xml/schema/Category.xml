<?xml version="1.0" encoding="iso-8859-1" ?>

<table>
  <base>CRM/Contact</base>
  <name>crm_category</name>
  <comment>Provides support for flat or hierarchical classification of various types of entities (contacts, groups, actions...).</comment>
  <field>
      <name>id</name>
      <type>int unsigned</type>
      <required>true</required>
      <comment>Category ID</comment>
  </field>
  <primaryKey>
       <name>id</name>
       <autoincrement>true</autoincrement>
  </primaryKey>
  <field>
      <name>domain_id</name>
      <type>int unsigned</type>
      <required>true</required>
      <comment>Which Domain owns this category</comment>
  </field>
  <foreignKey>
       <name>domain_id</name>
       <table>crm_domain</table>
       <key>id</key>
  </foreignKey>
  <field>
       <name>name</name>
       <type>varchar</type>
       <length>64</length>
       <comment>Name of Category.</comment>
  </field>
  <field>
       <name>description</name>
       <type>varchar</type>
       <length>255</length>
       <comment>Optional verbose description of the category.</comment>
  </field>
  <field>
       <name>parent_id</name>
       <type>int unsigned</type>
       <default>NULL</default>
       <comment>Optional parent id for this category.</comment>
  </field>
  <foreignKey>
       <name>parent_id</name>
       <table>crm_category</table>
       <key>id</key>
  </foreignKey>
</table>
