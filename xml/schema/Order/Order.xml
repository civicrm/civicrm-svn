<?xml version="1.0" encoding="iso-8859-1" ?> 
 
<table> 
  <base>CRM/Order</base> 
  <class>Order</class> 
  <name>civicrm_order</name> 
  <changedName>civicrm_contribution</changedName>
  <add>1.3</add>
  <drop>4.1</drop>
  <change>4.1</change>
  <changedName>civicrm_contribution</changedName>
  <log>true</log>
  <field> 
      <name>id</name> 
      <uniqueName>order_id</uniqueName>
      <type>int unsigned</type> 
      <required>true</required>
      <import>true</import> 
      <title>Order ID</title>
      <comment>Order ID</comment> 
      <add>1.3</add> 
  </field> 
  <primaryKey> 
       <name>id</name> 
       <autoincrement>true</autoincrement> 
  </primaryKey> 
  <field> 
      <name>contact_id</name> 
      <uniqueName>contribution_contact_id</uniqueName>
      <title>Contact ID</title>
      <type>int unsigned</type> 
      <required>true</required> 
      <import>true</import>
      <headerPattern>/contact(.?id)?/i</headerPattern>
      <dataPattern>/^\d+$/</dataPattern>
      <comment>FK to Contact ID</comment> 
      <add>1.3</add> 
  </field> 
  <foreignKey> 
       <name>contact_id</name> 
       <table>civicrm_contact</table> 
       <key>id</key> 
       <add>1.3</add> 
  </foreignKey> 
  <field> 
    <name>contact_snapshot</name> 
    <type>text</type>
    <comment>Note and/or Comment.</comment>
    <htmlType>textarea</htmlType>
    <rows>4</rows>
    <cols>80</cols>
    <comment>Serialized array of contact info of payor at time order is created</comment> 
    <add>4.1</add>
    <writeOnce>true</writeOnce>
  </field>
  <field> 
    <name>address_id</name> 
    <type>int unsigned</type> 
    <comment>Conditional foreign key to civicrm_address.id. We insert an address record for each order when we have associated billing name and address data.</comment> 
    <add>2.2</add> 
  </field> 
  <foreignKey> 
    <name>address_id</name> 
    <table>civicrm_address</table> 
    <key>id</key> 
    <add>2.2</add> 
    <onDelete>SET NULL</onDelete>
  </foreignKey>
  <field> 
      <name>order_date</name> 
      <type>datetime</type> 
      <import>true</import>
      <headerPattern>/receive(.?date)?/i</headerPattern>
      <dataPattern>/^\d{4}-?\d{2}-?\d{2} ?(\d{2}:?\d{2}:?(\d{2})?)?$/</dataPattern>
      <comment>When order was created</comment> 
      <add>1.3</add> 
      <change>4.1</change>
      <changedName>receive_date</changedName>
  </field> 
  <index>
     <name>order_date</name>
     <fieldName>order_date</fieldName>
     <add>1.6</add>
     <change>4.1</change>
     <changedName>receive_date</changedName>
  </index>
  <field>     
      <name>non_deductible_amount</name>  
      <title>Non-deductible Amount</title>
      <type>decimal</type>
      <default>0</default>
      <import>true</import>
      <headerPattern>/non?.?deduct/i</headerPattern>
      <dataPattern>/^\d+(\.\d{2})?$/</dataPattern>
      <comment>Portion of total amount which is NOT tax deductible. Equal to total_amount for non-deductible financial_accounts.</comment>  
      <add>1.3</add>  
  </field>
  <field>
      <name>non_deductible_financial_account_id</name>
      <title>Non-deductible Financial Account</title>
      <export>false</export>
      <type>int unsigned</type>
      <comment>FK to Financial Account</comment>
      <add>1.3</add>
      <change>4.1</change>
      <changedName>contribution_type_id</changedName>
  </field>    
  <foreignKey>  
      <name>non_deductible_financial_account_id</name>
      <table>civicrm_financial_account</table>  
      <key>id</key>         
      <add>1.3</add>  
      <change>4.1</change>
      <changedName>contribution_type_id</changedName>
  </foreignKey>  
  <field>     
      <name>total_amount</name>  
      <type>decimal</type>  
      <required>true</required>
      <import>true</import>
      <headerPattern>/^total|(.?^am(ou)?nt)/i</headerPattern>
      <dataPattern>/^\d+(\.\d{2})?$/</dataPattern>
      <comment>Total amount of this order. Use market value for non-monetary gifts.</comment>  
      <add>1.3</add>  
  </field>
  <field>
      <name>financial_account_id</name>
      <title>Financial Account</title>
      <export>false</export>
      <type>int unsigned</type>
      <comment>FK to Financial Account</comment>
      <add>1.3</add>
      <change>4.1</change>
      <changedName>contribution_type_id</changedName>
  </field>    
  <foreignKey>  
      <name>financial_account_id</name>
      <table>civicrm_financial_account</table>  
      <key>id</key>         
      <add>1.3</add>  
      <change>4.1</change>
      <changedName>contribution_type_id</changedName>
  </foreignKey>  
  <field>
      <name>tax_total</name>
      <type>decimal</type>
      <required>true</required>
      <add>4.1</add>
  </field>
  <field>
       <name>tax_account_id</name>
      <title>Tax Account</title>
      <type>int unsigned</type>
      <comment>FK to Financial Account.</comment>
      <add>4.1</add> 
  </field>    
  <foreignKey>  
       <name>tax_account_id</name>  
       <table>civicrm_financial_account</table>  
       <key>id</key>         
       <add>4.1</add>  
  </foreignKey> 
  <field>        
      <name>invoice_id</name>
      <title>Order ID</title>
      <type>varchar</type>     
      <length>255</length>  
      <import>true</import>
      <headerPattern>/invoice(.?id)?/i</headerPattern>
      <comment>Unique invoice id passed in</comment>
      <add>1.3</add>  
  </field>
  <index>
    <name>invoice_id</name>
    <fieldName>invoice_id</fieldName>
    <unique>true</unique>
    <add>2.1</add>
    <change>4.1</change>
    <changedName>UI_contrib_invoice_id</changedName>
  </index>
  <field>      
      <name>currency</name>   
      <type>varchar</type>   
      <length>3</length>
      <default>NULL</default>
      <import>true</import>
      <headerPattern>/cur(rency)?/i</headerPattern>
      <dataPattern>/^[A-Z]{3}$/i</dataPattern>
      <comment>3 character string, value from config setting or input via user.</comment>
      <add>1.3</add>   
  </field>
  <field>    
      <name>thankyou_date</name>
      <title>Thank-you Date</title>
      <type>datetime</type>    
      <import>true</import>
      <headerPattern>/thank(s|(.?you))?(.?date)?/i</headerPattern>
      <dataPattern>/^\d{4}-?\d{2}-?\d{2} ?(\d{2}:?\d{2}:?(\d{2})?)?$/</dataPattern>
      <comment>when (if) payor was thanked</comment>    
      <add>1.3</add>    
  </field>   
  <field>      
      <name>source</name>
      <uniqueName>order_source</uniqueName>
      <title>Order Source</title>
      <type>varchar</type>   
      <length>255</length>
      <import>true</import>
      <headerPattern>/source/i</headerPattern>
      <comment>Origin of this Order.</comment>   
      <add>1.3</add>   
  </field> 
  <field>
       <name>note</name>
       <type>text</type>
       <comment>Note and/or Comment.</comment>
       <htmlType>textarea</htmlType>
       <rows>4</rows>
       <cols>80</cols>
       <import>true</import>
       <headerPattern>/Note|Comment/i</headerPattern>
       <dataPattern>//</dataPattern>
       <add>1.4</add>
       <drop>1.7</drop>
  </field>
  <field>     
      <name>is_test</name>  
      <title>Test</title>
      <type>boolean</type>
      <default>0</default>
      <comment>Is this a test order?</comment>
      <import>true</import>
  </field>
  <field>     
      <name>is_pay_later</name>  
      <title>Is Pay Later</title>
      <type>boolean</type>
      <default>0</default>
      <comment>Is this order to be paid later than when it is created?</comment>
      <import>true</import>
      <add>2.1</add> 
  </field>
  <field>
      <name>order_status_id</name>
      <title>Order Status</title>
      <type>int unsigned</type>
      <default>1</default>
      <import>true</import>
      <export>false</export>
      <headerPattern>/status/i</headerPattern>
      <add>1.6</add>
      <change>4.1</change>
      <changedName>contribution_status_id</changedName>
  </field>
  <index>
    <name>index_order_status</name>
    <fieldName>order_status_id</fieldName>
    <add>1.6</add>
    <change>4.1</change>
    <changedName>index_contribution_status</changedName>
  </index>
  <field>  
    <name>add_credit_adjustment_id</name>  
    <type>int unsigned</type>  
    <import>true</import>
    <comment>FK to civicrm_credit_adjustment</comment>  
    <add>4.1</add>  
  </field> 
  <foreignKey> 
    <name>add_credit_adjustment_id</name> 
    <table>civicrm_credit_adjustment</table> 
    <key>id</key> 
    <add>4.1</add>
    <comment>Non-null means this record added by adjustment</comment>
  </foreignKey>
  <field>  
    <name>delete_credit_adjustment_id</name>  
    <type>int unsigned</type>  
    <import>true</import>
    <comment>FK to civicrm_credit_adjustment</comment>  
    <add>4.1</add>  
  </field> 
  <foreignKey> 
    <name>delete_credit_adjustment_id</name> 
    <table>civicrm_credit_adjustment</table> 
    <key>id</key> 
    <add>4.1</add>
    <comment>Non-null means this record deleted (ie cancelled) by adjustment.</comment>
  </foreignKey>
  <field> 
    <name>msg_template_id</name> 
    <type>int unsigned</type>
    <comment>template used to generate order</comment> 
    <add>4.1</add>
  </field>
  <foreignKey> 
    <name>msg_template_id</name> 
    <table>civicrm_msg_template</table> 
    <key>id</key> 
    <add>4.1</add>
  </foreignKey>
  <field> 
    <name>campaign_id</name>
    <uniqueName>contribution_campaign_id</uniqueName>
    <type>int unsigned</type>
    <title>Campaign ID</title>
    <import>true</import> 
    <comment>The campaign for which this contribution has been triggered.</comment> 
    <add>3.4</add> 
  </field> 
  <foreignKey> 
    <name>campaign_id</name> 
    <table>civicrm_campaign</table> 
    <key>id</key> 
    <onDelete>SET NULL</onDelete>
  </foreignKey>
</table>
