<?xml version="1.0" encoding="iso-8859-1" ?> 
 
<table> 
  <base>CRM/Donation</base> 
  <class>Gift</class> 
  <name>civicrm_gift</name> 
  <add>1.3</add> 
  <field> 
      <name>id</name> 
      <type>int unsigned</type> 
      <required>true</required> 
      <comment>Gift ID</comment> 
       <add>1.3</add> 
  </field> 
  <primaryKey> 
       <name>id</name> 
       <autoincrement>true</autoincrement> 
  </primaryKey> 
  <field> 
      <name>domain_id</name> 
      <type>int unsigned</type> 
      <required>true</required> 
      <comment>Which Domain owns this gift class.</comment> 
       <add>1.3</add> 
  </field> 
  <foreignKey> 
       <name>domain_id</name> 
       <table>civicrm_domain</table> 
       <key>id</key> 
       <add>1.3</add> 
  </foreignKey> 
  <field> 
      <name>contact_id</name> 
      <type>int unsigned</type> 
      <required>true</required> 
      <comment>FK to Contact ID</comment> 
      <add>1.3</add> 
  </field> 
  <foreignKey> 
       <name>contact_id</name> 
       <table>civicrm_contact</table> 
       <key>id</key> 
       <add>1.3</add> 
  </foreignKey> 
  <field>  
      <name>gift_type_id</name>  
      <type>int unsigned</type>  
      <comment>FK to Gift Type</comment>  
      <add>1.3</add>  
  </field>    
  <foreignKey>  
       <name>gift_type_id</name>  
       <table>civicrm_gift_type</table>  
       <key>id</key>  
       <add>1.3</add>  
  </foreignKey>  
  <field>  
      <name>gift_class_id</name>  
      <type>int unsigned</type>  
      <comment>FK to Gift Class</comment>  
      <add>1.3</add>  
  </field>    
  <foreignKey>  
       <name>gift_class_id</name>  
       <table>civicrm_gift_class</table>  
       <key>id</key>  
       <add>1.3</add>  
  </foreignKey>  
  <field>   
      <name>gift_payment_method_id</name>   
      <type>int unsigned</type>   
      <comment>FK to Gift Payment_Method</comment>   
      <add>1.3</add>   
  </field>     
  <foreignKey>   
       <name>gift_payment_method_id</name>   
       <table>civicrm_gift_payment_method</table>   
       <key>id</key>   
       <add>1.3</add>   
  </foreignKey>   
  <field> 
      <name>receive_date</name> 
      <type>datetime</type> 
      <required>true</required> 
      <comment>when was gift received</comment> 
      <add>1.3</add> 
  </field> 
  <field>     
      <name>amount</name>  
      <type>decimal</type>  
      <comment>market value for non-monetary gifts.</comment>  
      <add>1.3</add>  
  </field>
  <field>      
      <name>currency</name>   
      <type>varchar</type>   
      <length>64</length>
      <comment>3 character string, value derived from payment processor config setting.</comment>   
      <add>1.3</add>   
  </field> 
  <field>  
      <name>cancel_date</name>  
      <type>datetime</type>  
      <comment>when was gift cancelled</comment>  
      <add>1.3</add>  
  </field> 
  <field>   
      <name>cancel_reason</name>   
      <type>text</type>   
      <add>1.3</add>   
  </field>  
  <field>   
      <name>receipt_date</name>   
      <type>datetime</type>   
      <comment>when (if) receipt was sent; populated automatically for online donations w/ automatic receipting</comment>   
      <add>1.3</add>   
  </field>  
  <field>    
      <name>thankyou_date</name>    
      <type>datetime</type>    
      <comment>when (if) was donor thanked</comment>    
      <add>1.3</add>    
  </field>   
</table>
