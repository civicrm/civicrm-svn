<?xml version="1.0" encoding="iso-8859-1" ?>

<table>
  <base>CRM</base>
  <name>crm_country</name>
  <field>
      <name>id</name>
      <type>int unsigned</type>
      <required>true</required>
      <comment>Country Id</comment>
  </field>
  <primaryKey>
       <name>id</name>
       <autoincrement>true</autoincrement>
  </primaryKey>
  <field>
       <name>name</name>
       <title>Country</title>
       <type>varchar</type>
       <length>64</length>
       <import>true</import>
       <comment>Country Name</comment>
  </field>
  <field>
       <name>iso_code</name>
       <type>char</type>
       <length>2</length>
       <comment>ISO Code</comment>
  </field>
  <field>
       <name>country_code</name>
       <type>varchar</type>
       <length>4</length>
       <comment>National prefix to be used when dialing TO this country.</comment>
  </field>
  <field>
       <name>idd_prefix</name>
       <type>varchar</type>
       <length>4</length>
       <comment>International direct dialing prefix from within the country TO another country</comment>
  </field>
  <field>
       <name>ndd_prefix</name>
       <type>varchar</type>
       <length>4</length>
       <comment>Access prefix to call within a country to a different area</comment>
  </field>
</table>
