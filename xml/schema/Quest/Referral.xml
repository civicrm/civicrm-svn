<?xml version="1.0" encoding="iso-8859-1" ?>

<table>
  <base>CRM/Quest</base>
  <class>Referral</class>
  <name>quest_referral</name>
  <comment></comment>
  <add>1.5</add>
  <field>
      <name>id</name>
      <type>int unsigned</type>
      <required>true</required>
      <comment>Unique Referral ID</comment>
      <add>1.5</add>
  </field>
  <primaryKey>
       <name>id</name>
       <autoincrement>true</autoincrement>
  </primaryKey>
  <field>
      <name>contact_id</name>
      <type>int unsigned</type>
      <required>true</required>
      <comment>FK to Contact ID</comment>
      <add>1.5</add>
  </field>
  <foreignKey>
       <name>contact_id</name>
       <table>civicrm_contact</table>
       <key>id</key>
       <add>1.5</add>
  </foreignKey>
  <field>
      <name>application_id</name>
      <type>int unsigned</type>
      <comment>FK to option value</comment>
      <add>1.5</add>
  </field>
  <foreignKey>
       <name>application_id</name>
       <table>civicrm_option_value</table>
       <key>value</key>
       <add>1.5</add>
  </foreignKey>
  <field>
       <name>referral_type</name>
       <type>enum</type>
       <values>Student, Educator</values>
       <required>true</required>
       <comment>Which type of referral (person) is this? (Students and Educators are listed separately in the Referral section).</comment>
      <add>1.5</add>
  </field>
  <field>
       <name>first_name</name>
       <type>varchar</type>
       <required>true</required>
       <length>64</length>
       <add>1.5</add>
  </field>
  <field>
       <name>last_name</name>
       <type>varchar</type>
       <required>true</required>
       <length>64</length>
       <add>1.5</add>
  </field>
  <field>
       <name>email</name>
       <type>varchar</type>
       <required>true</required>
       <length>64</length>
       <add>1.5</add>
  </field>
  <field>
       <name>phone</name>
       <type>varchar</type>
       <length>64</length>
       <add>1.5</add>
  </field>
  <field>
       <name>school</name>
       <type>varchar</type>
       <length>255</length>
       <add>1.5</add>
  </field>
  <field>
      <name>position_id</name>
      <type>int unsigned</type>
      <comment>FK to option value. Uses school_position option_group</comment>
      <add>1.5</add>
  </field>
  <foreignKey>
       <name>position_id</name>
       <table>civicrm_option_value</table>
       <key>value</key>
       <add>1.5</add>
  </foreignKey>
  <field>
       <name>high_school_grad_year</name>
       <type>date</type>
       <default>NULL</default>
       <title>High School Grad Year</title>
       <comment>Year of high school graduation (only YYYY is significant).</comment>
       <add>1.5</add>
  </field>
</table>
