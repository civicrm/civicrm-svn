<?xml version="1.0" encoding="iso-8859-1" ?>

<table>
  <base>CRM/Quest</base>
  <class>CounselorEvaluation</class>
  <name>quest_counselor_evaluation</name>
  <comment>Recommender (counselor) Evaluation form fields (excluding essays).</comment>
  <add>1.5</add>
  <field>
      <name>id</name>
      <type>int unsigned</type>
      <required>true</required>
      <comment>Primary key.</comment>
      <add>1.5</add>
  </field>
  <primaryKey>
       <name>id</name>
       <autoincrement>true</autoincrement>
  </primaryKey>
  <field>
      <name>target_contact_id</name>
      <type>int unsigned</type>
      <required>true</required>
      <comment>The contact (student) being evaluated. FK to Contact ID.</comment>
      <add>1.5</add>
  </field>
  <foreignKey>
       <name>target_contact_id</name>
       <table>civicrm_contact</table>
       <key>id</key>
       <add>1.5</add>
  </foreignKey>
  <field>
      <name>source_contact_id</name>
      <type>int unsigned</type>
      <required>true</required>
      <comment>The contact (recommender) submitting the evaluation. FK to Contact ID.</comment>
      <add>1.5</add>
  </field>
  <foreignKey>
       <name>source_contact_id</name>
       <table>civicrm_contact</table>
       <key>id</key>
       <add>1.5</add>
  </foreignKey>
  <field>
       <name>is_context</name>
       <type>boolean</type>
       <default>0</default>
       <required>true</required>
       <comment>Is there a broader context in which to consider performance?</comment>
       <add>1.5</add>
  </field>
  <field>
       <name>is_problem_behavior</name>
       <type>boolean</type>
       <default>0</default>
       <required>true</required>
       <comment>Are there any observed problematic behaviors?</comment>
       <add>1.5</add>
  </field>
  <field>
       <name>is_disciplinary_action</name>
       <type>boolean</type>
       <default>0</default>
       <required>true</required>
       <comment>Are there any observed problematic behaviors?</comment>
       <add>1.5</add>
  </field>
  <index>
    <name>UI_target_source</name>
    <fieldName>target_contact_id</fieldName>
    <fieldName>source_contact_id</fieldName>
    <unique>true</unique>
    <add>1.5</add>
  </index>
</table>
