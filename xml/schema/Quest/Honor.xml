<?xml version="1.0" encoding="iso-8859-1" ?>

<table>
  <base>CRM/Quest</base>
  <class>Honor</class>
  <name>quest_honor</name>
  <comment>Academic honors linked to a civicrm_contact record (expected usage is for student applicants).</comment>
  <add>1.5</add>
  <field>
      <name>id</name>
      <type>int unsigned</type>
      <required>true</required>
      <comment>Unique Honor ID</comment>
      <add>1.5</add>
  </field>
  <primaryKey>
       <name>id</name>
       <autoincrement>true</autoincrement>
  </primaryKey>
  <field>
      <name>contact_id</name>
      <type>int unsigned</type>
      <required>true</required>
      <comment>FK to Contact ID</comment>
      <add>1.5</add>
  </field>
  <foreignKey>
       <name>contact_id</name>
       <table>civicrm_contact</table>
       <key>id</key>
       <add>1.5</add>
  </foreignKey>
  <field>
       <name>description</name>
       <type>varchar</type>
       <required>true</required>
       <length>255</length>
      <add>1.5</add>
  </field>
  <field>
       <name>award_date</name>
       <type>date</type>
       <comment>Date that the honor was awarded (month and year are significant).</comment>
       <add>1.5</add>
  </field>
</table>
