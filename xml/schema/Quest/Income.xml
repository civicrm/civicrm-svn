<?xml version="1.0" encoding="iso-8859-1" ?>

<table>
  <base>CRM/Quest</base>
  <class>Income</class>
  <name>quest_income</name>
  <comment>Income sources for Quest Students. Income sources are linked to Quest Person records.</comment>
  <add>1.5</add>
  <field>
      <name>id</name>
      <type>int unsigned</type>
      <required>true</required>
      <comment>Unique Income Source ID</comment>
      <add>1.5</add>
  </field>
  <primaryKey>
       <name>id</name>
       <autoincrement>true</autoincrement>
  </primaryKey>
  <field>
      <name>person_id</name>
      <type>int unsigned</type>
      <required>true</required>
      <comment>FK to Person ID</comment>
      <add>1.5</add>
  </field>
  <foreignKey>
       <name>person_id</name>
       <table>quest_person</table>
       <key>id</key>
       <add>1.5</add>
  </foreignKey>
  <field>
      <name>source_1_id</name>
      <type>int unsigned</type>
      <required>true</required>
      <comment>Income source type. FK to civicrm_option_value.</comment>
      <add>1.5</add>
  </field>
  <foreignKey>
       <name>source_1_id</name>
       <table>civicrm_option_value</table>
       <key>id</key>
       <add>1.5</add>
  </foreignKey>
  <field>
      <name>source_2_id</name>
      <type>int unsigned</type>
      <comment>Income source type (second source). FK to civicrm_option_value.</comment>
      <add>1.5</add>
  </field>
  <foreignKey>
       <name>source_2_id</name>
       <table>civicrm_option_value</table>
       <key>id</key>
       <add>1.5</add>
  </foreignKey>
  <field>
      <name>source_3_id</name>
      <type>int unsigned</type>
      <comment>Income source type (second source). FK to civicrm_option_value.</comment>
      <add>1.5</add>
  </field>
  <foreignKey>
       <name>source_3_id</name>
       <table>civicrm_option_value</table>
       <key>id</key>
       <add>1.5</add>
  </foreignKey>
  <field>
       <name>job_1</name>
       <type>varchar</type>
       <length>128</length>
       <comment>Job description.</comment>
      <add>1.5</add>
  </field>
  <field>
       <name>job_2</name>
       <type>varchar</type>
       <length>128</length>
       <comment>Job description (second source).</comment>
      <add>1.5</add>
  </field>
  <field>
       <name>job_3</name>
       <type>varchar</type>
       <length>128</length>
       <comment>Job description.</comment>
      <add>1.5</add>
  </field>
  <field>
       <name>amount_1</name>  
       <type>decimal</type>  
       <required>true</required>
       <comment>Total annual income from source 1.</comment>
      <add>1.5</add>
  </field>
  <field>
       <name>amount_2</name>  
       <type>decimal</type>  
       <comment>Total annual income from source 2.</comment>
      <add>1.5</add>
  </field>
  <field>
       <name>amount_3</name>  
       <type>decimal</type>
       <comment>Total annual income from source 3.</comment>
      <add>1.5</add>
  </field>
</table>
