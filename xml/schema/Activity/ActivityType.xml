<?xml version="1.0" encoding="iso-8859-1" ?>
<table>
  <base>CRM/ActivityType</base>
  <class>ActivityType</class>
  <name>civicrm_activity_type</name>
  <comment>Hierarchical categorisation of Activity Type are stored here.</comment>
  <add>2.2</add>

 <field>
    <name>id</name>
    <type>int unsigned</type>
    <required>true</required>
    <comment>Activity type id</comment>
    <add>2.2</add>
 </field>
 <primaryKey>
    <name>id</name>
    <autoincrement>true</autoincrement>
 </primaryKey>
 <field>
    <name>label</name>
    <title>Activity Type Label</title>
    <type>varchar</type>
    <required>true</required>
    <length>255</length>
    <localizable>true</localizable>
    <comment>Activity Type string as displayed to users.</comment>
    <add>2.2</add>
 </field>
 <field>
    <name>weight</name>
    <type>int</type>
    <default>1</default>
    <comment>Order in which the activity types should appear</comment>
    <add>2.2</add>
 </field>
 <field>
    <name>description</name>
    <type>varchar</type>
    <length>255</length>
    <comment>Optional verbose description for the activity type.</comment>
   <add>2.2</add>
 </field>
 <field>
    <name>is_active</name>
    <type>boolean</type>
    <default>1</default>
    <comment>is the activity type active ?</comment>
    <add>2.2</add>
 </field> 
 <field>
    <name>is_reserved</name>
    <type>boolean</type>
    <default>0</default>
    <comment>is the activity type reserved ?</comment>
    <add>2.2</add>
 </field> 
 <field>
    <name>parent_id</name>
    <type>int unsigned</type>
    <comment>Parent Activity Type ID (if this is a Category).for storing hierarchical categorisation</comment>
    <add>2.2</add>
 </field>
 <foreignKey>
    <name>parent_id</name>
    <table>civicrm_activity_type</table>
    <key>id</key>
    <add>2.2</add>
    <onDelete>CASCADE</onDelete>
 </foreignKey>

</table>
