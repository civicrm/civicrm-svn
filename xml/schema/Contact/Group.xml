<?xml version="1.0" encoding="iso-8859-1" ?>

<table>
  <base>CRM/Contact</base>
  <class>Group</class>
  <name>civicrm_group</name>
  <comment>Provide grouping of related contacts</comment>
  <field>
      <name>id</name>
      <type>int unsigned</type>
      <required>true</required>
      <comment>Group ID</comment>
  </field>
  <primaryKey>
       <name>id</name>
       <autoincrement>true</autoincrement>
  </primaryKey>
  <field>
      <name>domain_id</name>
      <type>int unsigned</type>
      <required>true</required>
      <comment>Which Domain owns this group</comment>
  </field>
  <foreignKey>
       <name>domain_id</name>
       <table>civicrm_domain</table>
       <key>id</key>
  </foreignKey>
  <field>
       <name>name</name>
       <type>varchar</type>
       <length>64</length>
       <comment>Internal name of Group.</comment>
  </field>
  <field>
       <name>title</name>
       <type>varchar</type>
       <length>64</length>
       <comment>Name of Group.</comment>
  </field>
  <field>
       <name>description</name>
       <type>varchar</type>
       <length>255</length>
       <comment>Optional verbose description of the group.</comment>
  </field>
  <field>
       <name>source</name>
       <type>varchar</type>
       <length>64</length>
       <comment>Module or process which created this group.</comment>
  </field>
  <field>
      <name>saved_search_id</name>
      <type>int unsigned</type>
      <comment>FK to saved search table.</comment>
  </field>
  <foreignKey>
       <name>saved_search_id</name>
       <table>civicrm_saved_search</table>
       <key>id</key>
  </foreignKey>
  <field>
       <name>is_active</name>
       <type>boolean</type>
       <comment>Is this entry active?</comment>
  </field>
  <index>
    <name>UI_title_domain_id</name>
    <fieldName>title</fieldName>
    <fieldName>domain_id</fieldName>
    <unique>true</unique>
  </index>
  <index>
    <name>UI_name_domain_id</name>
    <fieldName>name</fieldName>
    <fieldName>domain_id</fieldName>
    <unique>true</unique>
  </index>
</table>
