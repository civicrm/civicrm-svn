<?xml version="1.0" encoding="iso-8859-1" ?> 
 
<table> 
  <base>CRM/Invoice</base>
  <class>CreditAdjustment</class>
  <name>civicrm_credit_adjustment</name>
  <add>1.3</add>
  <change>4.1</change>
  <changedName>civicrm_contribution</changedName> 
  <changedFilter>cancel_date is not null</changedFilter>
  <log>true</log>
  <field> 
      <name>id</name> 
      <uniqueName>credit_adjustment_id</uniqueName>
      <type>int unsigned</type> 
      <required>true</required>
      <import>true</import> 
      <title>Credit Adjustment ID</title>
      <comment>Credit Adjustment ID</comment> 
      <add>1.3</add>
  </field> 
  <primaryKey> 
       <name>id</name> 
       <autoincrement>true</autoincrement> 
  </primaryKey> 
  <field> 
      <name>contact_id</name> 
      <uniqueName>credit_adjustment_contact_id</uniqueName>
      <title>Contact ID</title>
      <type>int unsigned</type> 
      <required>true</required> 
      <import>true</import>
      <headerPattern>/contact(.?id)?/i</headerPattern>
      <dataPattern>/^\d+$/</dataPattern>
      <comment>FK to Contact ID</comment> 
      <add>1.3</add> 
  </field> 
  <foreignKey> 
       <name>contact_id</name> 
       <table>civicrm_contact</table> 
       <key>id</key> 
       <add>1.3</add> 
  </foreignKey> 
  <field> 
    <name>contact_snapshot</name> 
    <type>text</type>
    <comment>Note and/or Comment.</comment>
    <htmlType>textarea</htmlType>
    <rows>4</rows>
    <cols>80</cols>
    <comment>Serialized array of contact info of payor at time of adjustment</comment> 
    <add>4.1</add>
    <writeOnce>true</writeOnce>
  </field>
  <field> 
    <name>address_id</name> 
    <type>int unsigned</type> 
    <comment>Conditional foreign key to civicrm_address.id. We insert an address record for each adjustment when we have associated billing name and address data.</comment>
    <add>2.2</add> 
  </field> 
  <foreignKey> 
    <name>address_id</name> 
    <table>civicrm_address</table> 
    <key>id</key> 
    <add>2.2</add> 
    <onDelete>SET NULL</onDelete>
  </foreignKey>
  <field> 
      <name>adjustment_date</name> 
      <type>datetime</type> 
      <import>true</import>
      <headerPattern>/adjustment(.?date)?/i</headerPattern>
      <dataPattern>/^\d{4}-?\d{2}-?\d{2} ?(\d{2}:?\d{2}:?(\d{2})?)?$/</dataPattern>
      <comment>When invoice was created</comment> 
      <add>1.3</add> 
      <change>4.1</change>
      <changedName>receive_date</changedName>
  </field> 
  <index>
     <name>adjustment_date</name>
     <fieldName>adjustment_date</fieldName>
     <add>1.3</add>
     <change>4.1</change>
     <changedName>cancel_date</changedName>
  </index>
  <field>   
      <name>adjustment_reason</name>   
      <type>text</type>   
      <import>true</import>
      <headerPattern>/(adjustment.?)?reason/i</headerPattern>
      <add>1.3</add>
      <change>4.1</change>   
      <changedName>cancel_reason</changedName>
  </field>  
  <field>
      <name>communication_date</name>
      <title>Communication Date</title>
      <type>datetime</type>    
      <comment>when letter or email notifying payor of adjustment sent</comment>    
      <add>4.1</add>    
  </field>   
  <field>
      <name>adjustment_status_id</name>
      <title>Adjustment Status</title>
      <type>int unsigned</type>
      <default>1</default>
      <import>true</import>
      <export>false</export>
      <headerPattern>/status/i</headerPattern>
      <add>1.6</add>
      <change>4.1</change>
      <changedName>contribution_status_id</changedName>
  </field>
  <index>
      <name>index_adjustment_status</name>
      <fieldName>adjustment_status_id</fieldName>
      <add>4.1</add>
  </index>
  <field> 
      <name>msg_template_id</name> 
      <type>int unsigned</type>
      <comment>template used to generate adjustment</comment> 
      <add>4.1</add>
  </field>
  <foreignKey> 
       <name>msg_template_id</name> 
       <table>civicrm_msg_template</table> 
       <key>id</key>
       <add>4.1</add>
       <onDelete>Set Null</onDelete>
  </foreignKey> 
  
</table>
