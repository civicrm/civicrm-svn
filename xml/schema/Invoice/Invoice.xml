<?xml version="1.0" encoding="iso-8859-1" ?> 
 
<table> 
  <base>CRM/Invoice</base> 
  <class>Invoice</class> 
  <name>civicrm_invoice</name> 
  <changedName>civicrm_contribution</changedName>
  <add>1.3</add>
  <change>4.1</change>
  <changedName>civicrm_contribution</changedName>
  <log>true</log>
  <field> 
      <name>id</name> 
      <uniqueName>invoice_id</uniqueName>
      <type>int unsigned</type> 
      <required>true</required>
      <import>true</import> 
      <title>Invoice ID</title>
      <comment>Invoice ID</comment> 
      <add>1.3</add> 
  </field> 
  <primaryKey> 
       <name>id</name> 
       <autoincrement>true</autoincrement> 
  </primaryKey> 
  <field> 
      <name>contact_id</name> 
      <uniqueName>contribution_contact_id</uniqueName>
      <title>Contact ID</title>
      <type>int unsigned</type> 
      <required>true</required> 
      <import>true</import>
      <headerPattern>/contact(.?id)?/i</headerPattern>
      <dataPattern>/^\d+$/</dataPattern>
      <comment>FK to Contact ID</comment> 
      <add>1.3</add> 
  </field> 
  <foreignKey> 
       <name>contact_id</name> 
       <table>civicrm_contact</table> 
       <key>id</key> 
       <add>1.3</add> 
       <onDelete>SET NULL</onDelete>
  </foreignKey> 
  <field> 
      <name>solicitor_id</name> 
      <title>Solicitor ID</title>
      <type>int unsigned</type> 
      <comment>FK to Solicitor ID</comment> 
      <add>1.4</add> 
      <drop>2.2</drop>
  </field> 
  <foreignKey> 
       <name>solicitor_id</name> 
       <table>civicrm_contact</table> 
       <key>id</key> 
       <add>1.4</add> 
       <drop>2.2</drop>
       <onDelete>SET NULL</onDelete>
  </foreignKey> 
  <field>
      <name>account_id</name>
      <title>Account</title>
      <export>false</export>
      <type>int unsigned</type>
      <comment>FK to Account</comment>
      <add>1.3</add>
      <change>4.1</change>
      <changedName>contribution_type_id</changedName>
  </field>    
  <foreignKey>  
      <name>account_id</name>
      <table>civicrm_contribution_type</table>  
      <key>id</key>         
      <add>1.3</add>  
      <change>4.1</change>
      <changedName>contribution_type_id</changedName>
      <onDelete>SET NULL</onDelete>
  </foreignKey>  
  <field> 
      <name>invoice_date</name> 
      <type>datetime</type> 
      <import>true</import>
      <headerPattern>/receive(.?date)?/i</headerPattern>
      <dataPattern>/^\d{4}-?\d{2}-?\d{2} ?(\d{2}:?\d{2}:?(\d{2})?)?$/</dataPattern>
      <comment>When invoice was created</comment> 
      <add>1.3</add> 
      <change>4.1</change>
      <changedName>receive_date</changedName>
  </field> 
  <index>
     <name>invoice_date</name>
     <fieldName>invoice_date</fieldName>
     <add>1.6</add>
     <change>4.1</change>
     <changedName>receive_date</changedName>
  </index>
  <field>     
      <name>non_deductible_amount</name>  
      <title>Non-deductible Amount</title>
      <type>decimal</type>
      <default>0</default>
      <import>true</import>
      <headerPattern>/non?.?deduct/i</headerPattern>
      <dataPattern>/^\d+(\.\d{2})?$/</dataPattern>
      <comment>Portion of total amount which is NOT tax deductible. Equal to total_amount for non-deductible accounts.</comment>  
      <add>1.3</add>  
  </field>
  <field>     
      <name>total_amount</name>  
      <type>decimal</type>  
      <required>true</required>
      <import>true</import>
      <headerPattern>/^total|(.?^am(ou)?nt)/i</headerPattern>
      <dataPattern>/^\d+(\.\d{2})?$/</dataPattern>
      <comment>Total amount of this invoice. Use market value for non-monetary gifts.</comment>  
      <add>1.3</add>  
  </field>
  <field>        
      <name>external_invoice_id</name>
      <title>External Invoice ID</title>
      <type>varchar</type>     
      <length>255</length>  
      <import>true</import>
      <headerPattern>/invoice(.?id)?/i</headerPattern>
      <comment>Unique external invoice id passed in</comment>
      <add>1.3</add>
      <change>4.1</change>
      <changedName>invoice_id</changedName>     
  </field>
  <index>
    <name>UI_invoice_external_invoice_id</name>
    <fieldName>external_invoice_id</fieldName>
    <unique>true</unique>
    <add>2.1</add>
    <change>4.1</change>
    <changedName>UI_contrib_invoice_id</changedName>
  </index>
  <field>      
      <name>currency</name>   
      <type>varchar</type>   
      <length>3</length>
      <default>NULL</default>
      <import>true</import>
      <headerPattern>/cur(rency)?/i</headerPattern>
      <dataPattern>/^[A-Z]{3}$/i</dataPattern>
      <comment>3 character string, value from config setting or input via user.</comment>
      <add>1.3</add>   
  </field>
  <field>    
      <name>thankyou_date</name>
      <title>Thank-you Date</title>
      <type>datetime</type>    
      <import>true</import>
      <headerPattern>/thank(s|(.?you))?(.?date)?/i</headerPattern>
      <dataPattern>/^\d{4}-?\d{2}-?\d{2} ?(\d{2}:?\d{2}:?(\d{2})?)?$/</dataPattern>
      <comment>when (if) donor was thanked</comment>    
      <add>1.3</add>    
  </field>   
  <field>      
      <name>source</name>
      <uniqueName>invoice_source</uniqueName>
      <title>Invoice Source</title>
      <type>varchar</type>   
      <length>255</length>
      <import>true</import>
      <headerPattern>/source/i</headerPattern>
      <comment>Origin of this Invoice.</comment>   
      <add>1.3</add>   
  </field> 
  <field>
       <name>note</name>
       <type>text</type>
       <comment>Note and/or Comment.</comment>
       <htmlType>textarea</htmlType>
       <rows>4</rows>
       <cols>80</cols>
       <import>true</import>
       <headerPattern>/Note|Comment/i</headerPattern>
       <dataPattern>//</dataPattern>
       <add>1.4</add>
       <drop>1.7</drop>
  </field>
  <field>     
      <name>is_test</name>  
      <title>Test</title>
      <type>boolean</type>
      <default>0</default>
      <comment>Is this a test invoice?</comment>
      <import>true</import>
  </field>
  <field>     
      <name>is_pay_later</name>  
      <title>Is Pay Later</title>
      <type>boolean</type>
      <default>0</default>
      <comment>Is this invoice to be paid later than when it is created?</comment>
      <import>true</import>
      <add>2.1</add> 
  </field>
  <field>
      <name>invoice_status_id</name>
      <title>Invoice Status</title>
      <type>int unsigned</type>
      <default>1</default>
      <import>true</import>
      <export>false</export>
      <headerPattern>/status/i</headerPattern>
      <add>1.6</add>
      <change>4.1</change>
      <changedName>contribution_status_id</changedName>
  </field>
  <index>
    <name>index_invoice_status</name>
    <fieldName>invoice_status_id</fieldName>
    <add>1.6</add>
    <change>4.1</change>
    <changedName>index_contribution_status</changedName>
  </index>
  <field> 
    <name>contact_snapshot</name> 
    <type>text</type>
    <comment>Note and/or Comment.</comment>
    <htmlType>textarea</htmlType>
    <rows>4</rows>
    <cols>80</cols>
    <comment>Serialized array of contact info of payor at time invoice is created</comment> 
    <add>4.1</add>
    <readOnly>true</readOnly></field>
  <field> 
    <name>campaign_id</name>
    <uniqueName>contribution_campaign_id</uniqueName>
    <type>int unsigned</type>
    <title>Campaign ID</title>
    <import>true</import> 
    <comment>The campaign for which this contribution has been triggered.</comment> 
    <add>3.4</add> 
  </field> 
  <foreignKey> 
    <name>campaign_id</name> 
    <table>civicrm_campaign</table> 
    <key>id</key> 
    <onDelete>SET NULL</onDelete>
  </foreignKey>
</table>
