<?xml version="1.0" encoding="iso-8859-1" ?>

<table>
  <base>CRM/Core</base>
  <class>EntityTag</class>
  <name>civicrm_entity_tag</name>
  <comment>Tag entities (Contacts, Groups, Actions) to categories.</comment>
  <field>
      <name>id</name>
      <type>int unsigned</type>
      <required>true</required>
      <comment>primary key</comment>
  </field>
  <primaryKey>
       <name>id</name>
       <autoincrement>true</autoincrement>
  </primaryKey>
  <field>
       <name>entity_table</name>
       <type>varchar</type>
       <length>64</length>
       <comment>physical tablename for entity being tagged, e.g. civicrm_contact</comment>
  </field>
  <field>
      <name>entity_id</name>
      <type>int unsigned</type>
      <required>true</required>
      <comment>FK to entity table specified in entity_table column.</comment>
  </field>
  <index>
       <name>index_entity</name>
       <fieldName>entity_table</fieldName>
       <fieldName>entity_id</fieldName>
  </index>
  <field>
      <name>tag_id</name>
      <type>int unsigned</type>
      <required>true</required>
      <comment>FK to civicrm_tag</comment>
  </field>
  <foreignKey>
       <name>tag_id</name>
       <table>civicrm_tag</table>
       <key>id</key>
  </foreignKey>
</table>
