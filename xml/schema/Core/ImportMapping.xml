<?xml version="1.0" encoding="iso-8859-1" ?>

<table>
  <base>CRM/Core</base>
  <class>ImportMapping</class>
  <name>civicrm_import_mapping</name>
  <comment>Store field mappings in import for reuse</comment>
  <field>
      <name>id</name>
      <type>int unsigned</type>
      <required>true</required>
      <comment>Import Mapping ID</comment>
  </field>
  <primaryKey>
       <name>id</name>
       <autoincrement>true</autoincrement>
  </primaryKey>
  <field>
        <name>domain_id</name>
        <type>int unsigned</type>
        <required>true</required>
        <comment>Domain to which this import mapping belongs</comment>
  </field>
  <foreignKey>
        <name>domain_id</name>
        <table>civicrm_domain</table>
        <key>id</key>
  </foreignKey>
  <field>
       <name>name</name>
       <type>varchar</type>
       <length>64</length>
       <comment>Name of Import Mapping</comment>
  </field>
  <field>
       <name>description</name>
       <type>varchar</type>
       <length>255</length>
       <comment>Description of Import Mapping.</comment>
  </field>
  <index>
    <name>UI_name</name>
    <fieldName>name</fieldName>
    <unique>true</unique>
  </index>
</table>
