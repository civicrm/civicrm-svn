<?xml version="1.0" encoding="iso-8859-1" ?>

<table>
    <base>CRM/ACL</base>
    <class>GroupJoin</class>
    <name>civicrm_acl_group_join</name>
    <comment>Join table for Contacts and Groups to ACL Groups</comment>
    <add>1.6</add>
    <field>
        <name>id</name>
        <type>int unsigned</type>
        <required>true</required>
        <comment>Unique table ID</comment>
        <add>1.6</add>
    </field>
    <primaryKey>
        <name>id</name>
        <autoincrement>true</autoincrement>
    </primaryKey>
    <field>
       <name>name</name>
       <title>ACL GroupJoin Name</title>
       <type>varchar</type>
       <length>64</length>
       <comment>ACL GroupJoin Name.</comment>
       <add>1.6</add>
    </field>
    <field>
        <name>acl_group_id</name>
        <type>int unsigned</type>
        <required>true</required>
        <comment>Foreign Key to ACL Group (which is an option value pair and hence an implicit FK)</comment>
        <add>1.6</add>
    </field>
    <field>
        <name>entity_table</name>
        <type>varchar</type>
        <length>64</length>
        <required>true</required>
        <comment>Table of the object joined to the ACL Group (Contact or Group)</comment>
        <add>1.6</add>
    </field>
    <field>
        <name>entity_id</name>
        <type>int unsigned</type>
        <required>true</required>
        <comment>ID of the group/contact object being joined</comment>
        <add>1.6</add>
    </field>
    <field>
       <name>is_active</name>
       <type>boolean</type>
       <comment>Is this property active?</comment>
       <add>1.6</add>
    </field>
</table>
