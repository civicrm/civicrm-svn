<?xml version="1.0" encoding="iso-8859-1" ?>

<table>
  <base>CRM/Core</base>
  <class>CustomValue</class>
  <name>civicrm_custom_value</name>
  <comment>Data store for each extended properties.</comment>
  <add>1.1</add>
  <field>
      <name>id</name>
      <type>int unsigned</type>
      <required>true</required>
      <comment>Unique ID</comment>
      <add>1.1</add>
  </field>
  <primaryKey>
       <name>id</name>
       <autoincrement>true</autoincrement>
  </primaryKey>
  <field>
      <name>custom_field_id</name>
      <type>int unsigned</type>
      <required>true</required>
      <comment>Foreign key to civicrm_ext_property.</comment>
       <add>1.1</add>
  </field>
  <foreignKey>
       <name>custom_field_id</name>
       <table>civicrm_custom_field</table>
       <key>id</key>
       <add>1.1</add>
  </foreignKey>
  <field>
       <name>entity_table</name>
       <type>varchar</type>
       <length>64</length>
       <comment>physical tablename for entity being extended by this data, e.g. civicrm_contact</comment>
       <add>1.1</add>
  </field>
  <field>
      <name>entity_id</name>
      <type>int unsigned</type>
      <required>true</required>
      <comment>FK to record in the entity table specified by entity_table column.</comment>
      <add>1.1</add>
  </field>
  <index>
       <name>index_entity</name>
       <fieldName>entity_table</fieldName>
       <fieldName>entity_id</fieldName>
       <add>1.1</add>
  </index>
  <field>
     <name>int_data</name>
     <type>int</type>
     <comment>stores data for ext property data_type = integer. This col supports signed integers.</comment>
     <add>1.1</add>
  </field>
  <index>
       <name>index_int_field</name>
       <fieldName>int_data</fieldName>
       <fieldName>custom_field_id</fieldName>
       <add>1.6</add>
  </index>
  <field>
     <name>float_data</name>
     <type>float</type>
     <comment>stores data for ext property data_type = float.</comment>
     <add>1.1</add>
  </field>
  <index>
       <name>index_float_field</name>
       <fieldName>float_data</fieldName>
       <fieldName>custom_field_id</fieldName>
       <add>1.6</add>
  </index>
  <field>
     <name>decimal_data</name>
     <type>decimal</type>
     <comment>stores data for ext property data_type = money.</comment>
       <add>1.1</add>
  </field>
  <index>
       <name>index_decimal_field</name>
       <fieldName>decimal_data</fieldName>
       <fieldName>custom_field_id</fieldName>
       <add>1.6</add>
  </index>
  <field>
     <name>char_data</name>
     <type>varchar</type>
     <length>255</length>
     <comment>data for ext property data_type = text.</comment>
     <add>1.1</add>
  </field>
  <index>
       <name>index_char_field</name>
       <fieldName>char_data</fieldName>
       <fieldName>custom_field_id</fieldName>
       <add>1.6</add>
  </index>
  <field>
     <name>date_data</name>
     <type>date</type>
     <comment>data for ext property data_type = date.</comment>
       <add>1.1</add>
  </field>
  <index>
       <name>index_date_field</name>
       <fieldName>date_data</fieldName>
       <fieldName>custom_field_id</fieldName>
       <add>1.6</add>
  </index>
  <field>
     <name>memo_data</name>
     <type>text</type>
     <comment>data for ext property data_type = memo.</comment>
       <add>1.1</add>
  </field>
  <index>
       <name>index_memo_field</name>
       <fieldName>memo_data</fieldName>
       <fieldName>custom_field_id</fieldName>
       <add>1.6</add>
  </index>
  <field>
      <name>file_id</name>
      <type>int unsigned</type>
      <comment>FK to civicrm_file</comment>
      <add>1.5</add>
  </field>
  <foreignKey>
       <name>file_id</name>
       <table>civicrm_file</table>
       <key>id</key>
       <add>1.5</add>
  </foreignKey>
</table>
