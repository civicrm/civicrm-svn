<?xml version="1.0" encoding="iso-8859-1" ?>

<table>
  <base>CRM/Grant</base>
  <class>GrantProgram</class>
  <name>civicrm_grant_program</name>
  <comment>This table stores information about grant programs given to a contact.</comment>
  <add>4.3</add>
  <log>true</log>
  <field>
    <name>id</name>
    <type>int unsigned</type>
    <uniqueName>grant_program_id</uniqueName>
    <title>Grant Program ID</title>
    <required>true</required>
    <comment>Grant Program ID</comment>
    <import>true</import>
    <add>4.3</add>
  </field>
  <primaryKey>
    <name>id</name>
    <autoincrement>true</autoincrement>
  </primaryKey>
  <field>
    <name>label</name>
    <title>Label</title>
    <type>varchar</type>
    <length>255</length>
    <comment>Label displayed to users</comment>
    <add>4.3</add>
  </field> 
  <field>
    <name>name</name>
    <title>Name</title>
    <type>varchar</type>
    <length>255</length>
    <comment>Stores a fixed (non-translated) name for the grant program.</comment>
    <add>4.3</add>
  </field>
  <field>
    <name>grant_type_id</name>
    <type>int unsigned</type>
    <title>Grant Type Id</title>
    <export>false</export>
    <required>true</required>
    <comment>Type of grant. Implicit FK to civicrm_option_value in grant_type option_group.</comment>
    <add>4.3</add>
  </field>
  <foreignKey>
    <name>grant_type_id</name>
    <table>civicrm_option_value</table>
    <key>id</key>
    <add>4.3</add>
  </foreignKey> 
  <field>     
    <name>total_amount</name>
    <title>Total Amount</title>
    <type>decimal</type>
    <required>true</required>
    <dataPattern>/^\d+(\.\d{2})?$/</dataPattern>
    <import>true</import>
    <comment>Requested grant program amount, in default currency.</comment>
    <add>4.3</add>
  </field>
  <field>     
    <name>remainder_amount</name>
    <title>Remainder Amount</title>
    <type>decimal</type>
    <required>true</required>
    <dataPattern>/^\d+(\.\d{2})?$/</dataPattern>
    <import>true</import>
    <comment>Requested grant program remainder amount, in default currency.</comment>
    <add>4.3</add>
  </field>
  <field>
    <name>financial_type_id</name>
    <type>int unsigned</type>
    <uniqueName>financial_type_id</uniqueName>
    <title>Financial Type ID</title>
    <required>true</required>
    <comment>Financial Type ID</comment>
    <import>true</import>
    <add>4.3</add>
  </field>
  <field> 
    <name>status_id</name>
    <type>int unsigned</type>
    <title>Grant Program Status Id</title>
    <uniqueName>grant_status_id</uniqueName>
    <required>true</required>
    <import>true</import> 
    <export>false</export>
    <comment>Id of Grant status.</comment>
    <add>4.3</add>
  </field>
  <foreignKey>
    <name>status_id</name>
    <table>civicrm_option_value</table>
    <key>id</key>
    <add>4.3</add>
  </foreignKey>
  <field>
    <name>allocation_date</name>
    <title>Allocation date</title>
    <type>date</type>
    <comment>Allocation date.</comment>
    <import>true</import>
    <add>4.3</add>
  </field>
  <field>
    <name>is_active</name>
    <type>boolean</type>
    <default>1</default> 
    <comment>Is this grant program active?</comment>
    <add>4.3</add>
  </field>
  <field>
    <name>is_auto_email</name>
    <type>boolean</type>
    <default>1</default> 
    <comment>Is auto email active?</comment>
    <add>4.3</add>
  </field>
  <field>
    <name>payment_id</name>
    <type>int unsigned</type>
    <title>Payment Id</title>
    <export>false</export>
    <required>true</required>
    <comment>Type of grant. Implicit FK to civicrm_payment.</comment>
    <add>4.3</add>
  </field>
  <foreignKey>
    <name>payment_id</name>
    <table>civicrm_payment</table>
    <key>id</key>
    <add>4.3</add>
  </foreignKey> 
</table>
