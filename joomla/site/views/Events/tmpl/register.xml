<metadata>
	<layout title="Register for Events" >
	     <message>	
		</message>
	</layout>
    <state>
        <name>CiviCRM</name>
        <creationDate>04/01/2008</creationDate>
        <copyright>(C) CiviCRM LLC</copyright>
        <author>CiviCRM LLC</author>
        <authorEmail>info@civicrm.org</authorEmail>
        <authorUrl>civicrm.org</authorUrl>
        <version>2.1</version>
        <description>CiviCRM events </description>
				<name>Standard Event Registration Layout</name>
		<description>STANDARD EVENT REGISTRATIOn LAYOUT DESC</description>
        <params>
			<param name="id" type="sql" default="10" label="Select an Event" query="SELECT id,title FROM civicrm_event WHERE is_active = 1 ORDER BY title" key_field="id" value_field="title" />
			<param name="task" type="hidden" default="civicrm/event/register" label="" />
			<param name="reset" type="hidden" size="5" default="1" label="Reset" description="Keep this set to 1. This is needed for the form to work properly." />
			<param name="image" type="imagelist" directory="/images/stories" hide_default="1" default="" label="Image" description="PARAMIMAGE" />
			<param name="image_align" type="radio" default="right" label="Image Align" description="Alignment of the image">
				<option value="left">Left</option>
				<option value="right">Right</option>
			</param>
			<param name="show_comp_description" type="radio" default="1" label="Description" description="Show/Hide the Description below">
				<option value="0">Hide</option>
				<option value="1">Show</option>
			</param>
			<param name="comp_description" type="textarea" default="" label="Event Register Intro" rows="3" cols="50" description="EVENTS_REGISTER_DESC" />
		</params>
 	</state>
 </metadata>
  